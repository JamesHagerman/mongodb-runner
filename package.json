{
  "name": "mongo-runner",
  "displayName": "Mongo Runner",
  "description": "MongoDB Runner is a VSCode extenion to connect MongoDB instance.",
  "version": "0.0.7",
  "publisher": "JoeyYiZhao",
  "engines": {
    "vscode": "^1.22.0"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/zhaoyi0113/mongodb-runner.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:mongoRunner",
    "*"
  ],
  "icon": "images/mongo-runner.png",
  "main": "./client/src/extension",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "mongoRunner",
          "name": "Mongo Runner"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.numberOfChars",
        "title": "Number Of Chars"
      },
      {
        "command": "mongoRunner.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "mongoRunner.serverStatus",
        "title": "Server Status",
        "icon": {
          "light": "resources/light/refresh.png",
          "dark": "resources/dark/refresh.png"
        }
      },
      {
        "command": "mongoRunner.serverBuildInfo",
        "title": "Server Build Info"
      },
      {
        "command": "mongoRunner.deleteDatabase",
        "title": "Delete Database"
      },
      {
        "command": "mongoRunner.deleteCollection",
        "title": "Delete Collection"
      },
      {
        "command": "mongoRunner.createCollection",
        "title": "Create Collection"
      },
      {
        "command": "mongoRunner.getCollectionAttributes",
        "title": "Get Attributes"
      },
      {
        "command": "mongoRunner.getIndex",
        "title": "Get Index"
      },
      {
        "command": "mongoRunner.createIndex",
        "title": "Create Index..."
      },
      {
        "command": "mongoRunner.createIndexInEditor",
        "title": "Create Index In Editor..."
      },
      {
        "command": "mongoRunner.simpleQuery",
        "title": "Simple query..."
      },
      {
        "command": "mongoRunner.findFirst20Docs",
        "title": "Find First 20 Docs"
      },
      {
        "command": "mongoRunner.deleteIndex",
        "title": "Delete Index"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mongoRunner.refresh",
          "when": "view == mongoRunner",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "mongoRunner.serverBuildInfo",
          "when": "viewItem == databases"
        },
        {
          "command": "mongoRunner.serverStatus",
          "when": "viewItem == databases"
        },
        {
          "command": "mongoRunner.deleteDatabase",
          "when": "viewItem == database"
        },
        {
          "command": "mongoRunner.deleteCollection",
          "when": "viewItem == collection"
        },
        {
          "command": "mongoRunner.getCollectionAttributes",
          "when": "viewItem == collection"
        },
        {
          "command": "mongoRunner.getIndex",
          "when": "viewItem == collection"
        },
        {
          "command": "mongoRunner.deleteIndex",
          "when": "viewItem == index"
        },
        {
          "command": "mongoRunner.createIndex",
          "when": "viewItem == collection"
        },
        {
          "command": "mongoRunner.createIndexInEditor",
          "when": "viewItem == collection"
        },
        {
          "command": "mongoRunner.createIndex",
          "when": "viewItem == indexes"
        },
        {
          "command": "mongoRunner.simpleQuery",
          "when": "viewItem == collection"
        },
        {
          "command": "mongoRunner.findFirst20Docs",
          "when": "viewItem == collection"
        }
      ]
    },
    "configuration": [
      {
        "type": "object",
        "title": "MongoDB Runner Configuration",
        "properties": {
          "mongoRunner": {
            "type": "object",
            "default": {},
            "description": "Complete connection configuration for your MongoDB.",
            "properties": {
              "connection": "object",
              "properties": {
                "url": "string",
                "activeOnStartUp": "boolean",
                "default": true
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "vscode:test": "node ./node_modules/vscode/bin/test",
    "test": "cd client && yarn test",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "eslint": "^4.11.0",
    "jest": "^23.4.1",
    "typescript": "^2.6.1",
    "vscode": "^1.1.17"
  }
}
